{
    "compilerOptions": {
        "target": "ES5",
        "module": "esnext",
        "moduleResolution": "Node",
        "lib": [
            "DOM",
            "ES6"
        ],
        "jsx": "react-jsx",
        "noEmit": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": false
    },
    "include": [
        "src/**/*"
    ]
}